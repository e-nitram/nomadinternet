.c-affiliate_box {

}

.c-affiliate_box p {
  margin-bottom: 0;
}

.c-affiliate_box p a {
  color: white;
  text-decoration: underline;
}

.c-affiliate_box .back-to-top {
  color: #fff;
  text-decoration: underline;
}

.c-affiliate_box h3 {
  display: flex;
  justify-content: space-between;
}

.c-affiliate_box h3 .small-top {
    min-width: 65px;
    display: flex;
    justify-content: flex-end;
}

@media only screen and (max-width: 600px) {
  .c-affiliate_box h3 {
    flex-direction: column;
  }
  .c-affiliate_box h3 .small-top {
    justify-content: flex-start;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
    margin-left: 0;
  }
}