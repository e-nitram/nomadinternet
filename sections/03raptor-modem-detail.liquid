{{ '03raptor-modem-detail.css' | asset_url | stylesheet_tag }}

<div 
  class="raptor-modem-detail"
  style="--bg-image: url({{ section.settings.bg_image | img_url: 'master' }})";
>
  <div class="container">
    {% if section.settings.heading != blank %}
      <span class="sub-heading">{{ section.settings.sub_heading }}</span>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h3 class="heading">{{ section.settings.heading }}</h3>
    {% endif %}

    <div class="wrapper">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: 'master' }}" class="modem-image"/>
      {% endif %}

      <div class="content">
        {% if section.settings.content != blank %}
          <div class="list">
            {{ section.settings.content | replace: '<br>', '' }}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="btn btn--customize" target="_blank">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="bottom-content">
      {% if section.settings.bottom_sub_heading != blank %}
        <span class="sub-title">{{ section.settings.bottom_sub_heading }}</span>
      {% endif %}

      {% if section.settings.bottom_heading != blank %}
        <h3 class="title">{{ section.settings.bottom_heading }}</h3>
      {% endif %}

      <div class="bottom-content__list">
        {% for block in section.blocks %}
          {% if block.settings.icon != blank %}
            <div class="item">
              <img src="{{ block.settings.icon | img_url: 'master' }}"/>

              {% if block.settings.text != blank %}
                <span>{{ block.settings.text }}</span>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.bottom_btn_text != blank and section.settings.bottom_btn_url != blank %}
        <a href="{{ section.settings.bottom_btn_url }}" class="btn btn--customize bottom-content__btn" target="_blank">
          {{ section.settings.bottom_btn_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Raptor modem detail",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Modem image"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Bottom content"
    },
    {
      "type": "text",
      "id": "bottom_sub_heading",
      "label": "Bottom sub heading"
    },
    {
      "type": "text",
      "id": "bottom_heading",
      "label": "Bottom heading"
    },
    {
      "type": "text",
      "id": "bottom_btn_text",
      "label": "Bottom btn text"
    },
    {
      "type": "url",
      "id": "bottom_btn_url",
      "label": "Bottom btn url"
    }
  ],
  "blocks": [
    {
      "type": "image-item",
      "name": "Image item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Raptor modem detail"
    }
  ]
}
{% endschema %}