{{ 'usp-banner.css' | asset_url | stylesheet_tag }}
<section class="usp_banner {% if template == 'page.nomad-landing' %}page--nomad-landing{% endif %}" style="--bg-color: {{ section.settings.bg_color }};">
  <div class="usp_container">
    {% for block in section.blocks %}
      <div class="usp_block" js-usp-block-item data-index="{{ section.id }}-{{ block.id }}-0">
        {% if block.settings.icon != blank %}
          {{ block.settings.icon }}
        {% endif %}
        
        <span>{{ block.settings.heading }}</span>
        {% if block.settings.content != blank %}
          <div class="usp_block-popup customize-notify hidden" data-index="{{ section.id }}-{{ block.id }}-0"{% if template == 'page.nomad-landing' %} data-page="beacon-one"{% endif %}>
            <h6 class="title">{{ block.settings.heading }}</h6>
            <span>
              {{ block.settings.content }}
            </span>
          </div>
        {% endif %}
      </div>    
    {% endfor %}
  </div>  
</section>

{% if template == 'page.host-beacons' %}
  <style>
    .usp_container .usp_block span {
      font-family: "Inter",Sans-serif;
      font-size: 22px;
    }

    .usp_container .usp_block svg {
      width: 40px;
      height: 40px;
    }
  </style>
{% elsif template == 'page.flex-pay' %}
  <style>
    .usp_container .usp_block .customize-notify * {
      font-family: Graphie;
    }
  </style>
{% endif %}

{% schema %}
{
  "name": "USP banner",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Bg color",
      "default": "#000"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Icon item",
      "limit": 3,
      "settings": [
        {
          "type": "textarea",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "header",
          "content": "Popup content"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "USP banner"
    }
  ]
}
{% endschema %}