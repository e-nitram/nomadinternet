let anchorSelector = 'a[href="#wizard-plans"]';
let anchorList =
document.querySelectorAll(anchorSelector);
anchorList.forEach(link => {
link.onclick = function (e) {
e.preventDefault();
let destination =
document.querySelector(this.hash);
destination.scrollIntoView({
behavior: 'smooth'
});
}
});
</script>


