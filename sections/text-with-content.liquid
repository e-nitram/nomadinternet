<div class="text-with-content {% if template == 'page.nomad-landing' %}page--nomad-landing{% endif %}" style="--bg-color: {{ section.settings.bg_color }}; --text-color: {{ section.settings.text_color }};">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h3 class="heading">{{ section.settings.heading }}</h3>
    {% endif %}

    {% if section.settings.content != blank %}
      <div class="content">{{ section.settings.content }}</div>
    {% endif %}
  </div>
</div>

<style>
  .text-with-content {
    background-color: var(--bg-color);
  }

  .text-with-content * {
    color: var(--text-color);
  }

  .text-with-content .heading {
    font-size: 32px;
    line-height: 1.4;
    font-family: 'DIN';
    font-weight: 700;
    margin: 0;
    padding-bottom: 30px;
    text-transform: uppercase;
    position: relative;
    letter-spacing: 0.02em;
    padding-top: 60px;
    text-align: center;
  }

  .text-with-content .heading::after {
    content: " ";
    width: 76px;
    height: 3px;
    display: block;
    background: #008061;
    margin: auto;
    margin-top: 10px;
  }

  .text-with-content .content * {
    margin: 0;
    margin-bottom: 8px;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    font-family: 'DIN';
  }

  .text-with-content .content *:last-of-type {
    margin-bottom: 0;
  }

  @media (min-width: 1024px) {
    .text-with-content .heading {
      font-size: 40px;
    }
  }
</style>

{% if template == 'page.flex-pay' %}
  <style>
    @media (min-width: 1024px) {
      .text-with-content .heading {
        max-width: 750px;
        margin: auto;
      }
    }
  </style>
{% endif %}

{% schema %}
{
  "name": "Text with content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "Text with content"
    }
  ]
}
{% endschema %}