<div class="home-new-banner">
  <div class="container">
    <div class="home-new-banner__wrapper">
      {% if section.settings.icon != blank %}
        <img src="{{ section.settings.icon | img_url: 'master' }}" class="mobile-hidden" width="300"/>
      {% endif %}

      {% if section.settings.mobile_icon != blank %}
        <img src="{{ section.settings.mobile_icon | img_url: 'master' }}" class="desktop-hidden" width="220"/>
      {% endif %}

      <div class="home-new-banner__inner">
        {% if section.settings.heading != blank %}
          <h3>{{ section.settings.heading }}</h3>
        {% endif %}

        {% if section.settings.content != blank %}
          <div class="content">{{ section.settings.content }}</div>
        {% endif %}

        <div class="home-new-banner__buttons">
          {% if section.settings.button_text != blank and section.settings.button_link != blank %}
            <a class="button button--primary" href="{{ section.settings.button_link }}" {% if section.settings.new_tab %}target="_blank"{% endif %}>
              {{ section.settings.button_text }}

              {% if section.settings.show_icon %}
                <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5 12.2354H19M19 12.2354L12 5.23535M19 12.2354L12 19.2354" stroke="#008363" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>  
              {% endif %}
            </a>
          {% endif %}
  
          {% if section.settings.button_text2 != blank and section.settings.button_link2 != blank %}
            <a class="button button--secondary" href="{{ section.settings.button_link2 }}" {% if section.settings.new_tab2 %}target="_blank"{% endif %}>
              {{ section.settings.button_text2 }}
              {% if section.settings.show_icon2 %}
                <svg width="25" height="25" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M7.30273 17.8806L17.3027 7.88062M17.3027 7.88062H7.30273M17.3027 7.88062V17.8806" stroke="#013127" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>                
              {% endif %}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-icon">
    <img src="https://cdn.shopify.com/s/files/1/0103/2847/3658/files/Group_469290.png?v=1703255298"/>
  </div>

  <style>
@media only screen and (min-width: 1024px) {
  div.home-new-banner__inner {
    margin-right: 60px;
  }
}
    .home-new-banner {
      background: #d9e4e1;
      position: relative;
    }

    .home-new-banner__wrapper {
      display: flex;
      gap: 35px;
      padding-top: 35px;
      align-items: flex-end;
    }

    .home-new-banner__inner {
      margin: auto;
      margin-left: 0;
    }

    .home-new-banner__wrapper h3 {
      font-size: 36px;
      line-height: 41.4px;
      font-weight: 800;
      margin: 0;
      margin-bottom: 4px;
      background: linear-gradient(90.26deg, #013127 0.2%, #007159 121.15%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      user-select: none;
    }

    .home-new-banner__wrapper .content {
      font-size: 18px;
      line-height: 30.89px;
      font-weight: 400;
      margin-bottom: 16px;
    }

    .home-new-banner__wrapper .content * {
      margin: 0;
      margin-bottom: 4px;
    }

    .home-new-banner__inner .button {
      font-size: 20px;
      font-weight: 700;
      line-height: 30.89px;
      color: #008363;
      display: flex;
      align-items: center;
      gap: 4px;
      text-decoration: none;
    }

    .home-new-banner__inner .button:hover {
      opacity: 0.8;
    }

    .home-new-banner .bg-icon {
      position: absolute;
      top: 0;
      right: 0px;
      bottom: 0;
    }

    .home-new-banner .bg-icon img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }


    .home-new-banner .mobile-hidden {
      display: block;
    }

    .home-new-banner .desktop-hidden {
      display: none;
    }

    .home-new-banner .button {
      border-radius: 8px;
      padding: 28px 16px;
      height: 48px;
      letter-spacing: 0.02em;
    }

    .home-new-banner .button.button--primary {
      background: rgba(0, 112, 85, 1);
      color: #fff;
    }

    .home-new-banner .button.button--secondary {
      border: 1px solid rgba(1, 49, 39, 1);
      background-color: transparent;
      color: rgba(1, 49, 39, 1);
    }

    .home-new-banner__buttons {
      display: flex; align-items: center; gap: 20px;margin-bottom: 10px;
    }

    @media (max-width: 990px) {
      .home-new-banner__buttons {
        flex-direction: column;
      }
      .home-new-banner .mobile-hidden {
        display: none;
      }

      .home-new-banner .desktop-hidden {
        display: block;
      }

      .home-new-banner__wrapper {
        flex-direction: column;
        align-items: center;
        padding: 24px 10px;
        gap: 20px;
      }
    
      .home-new-banner__wrapper h3 {
        font-size: 32px;
        line-height: 40px;
      }

      .home-new-banner__wrapper .content {
        font-size: 16px;
        line-height: 24px;
      }

      .home-new-banner .bg-icon {
        display: none;
      }

      .home-new-banner__inner {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: auto;
      }
    }
  </style>
</div>

{% schema %}
{
  "name": "Home new banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "image_picker",
      "id": "mobile_icon",
      "label": "Mobile icon"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type":"header",
      "content": "Button 1"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show icon",
      "default": false
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "new_tab",
      "label": "New blank tab",
      "default": true
    },
    {
      "type":"header",
      "content": "Button 2"
    },
    {
      "type": "checkbox",
      "id": "show_icon2",
      "label": "Show icon 2",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text2",
      "label": "Button text 2"
    },
    {
      "type": "url",
      "id": "button_link2",
      "label": "Button link 2"
    },
    {
      "type": "checkbox",
      "id": "new_tab2",
      "label": "New blank tab 2",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Home new banner"
    }
  ]
}
{% endschema %}