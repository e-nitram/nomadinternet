{% endfor %} 
           
        </div>

    
  </div>
</section>

<div class="home_pricing popup">
  <div class="overlay"></div>
{% include 'plan-specification' %}
</div>


{% schema %}
{
  "name": "Home Pricing",
  "presets": [
    {
      "name": "Home Pricing"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "popuptext",
      "label": "Popup Text"
    }
  ],
  "blocks": [
    {
      "type": "block",
      "name": "Plan Offer",
      "settings": [
       {
          "type": "text",
          "id": "plan_offer",
          "label": "Plan Offer"
        }, 
       {
          "type": "html",
          "id": "plan_title",
          "label": "Plan Title"
        },
        {
          "type": "html",
          "id": "plan_price",
          "label": "Plan Price"
        },
        {
          "type": "html",
          "id": "plan_details",
          "label": "Plan Details"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
        
      ]
    }
  ]
}
{% endschema %}


