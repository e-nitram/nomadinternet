{% comment %}
File name:
	lp - landing page
	number - section number
{% endcomment %}

<div class="lp-8">
	<div class="lp-8__content">
		{% if section.settings.title %}
			<h2 class="lp-8__title">{{ section.settings.title }}</h2>
		{% endif %}
		{% if section.blocks %}
			<div class="swiper lp-8__swiper">
				<div class="swiper-wrapper">
					{% for block in section.blocks %}
						{% if block.settings.image %}
							<div class="swiper-slide">
								<div class="lp-8__card">
									{% if block.settings.url %}
										<a href="{{ block.settings.url }}"{% if block.settings.target_blank %} target="_blank"{% endif %}>
											<div class="card__image">
												{% assign img = block.settings.image %}
												{{ img | image_url: width: 1024 | image_tag }}
											</div>
										</a>
									{% else %}
										<div class="card__image">
											{% assign img = block.settings.image %}
											{{ img | image_url: width: 1024 | image_tag }}
										</div>
									{% endif %}
								</div>
							</div>
						{% endif %}
					{% endfor %}
				</div>
				<div class="swiper-pagination"></div>
				<div class="swiper-button-prev"></div>
				<div class="swiper-button-next"></div>
			</div>
		{% endif %}
	</div>
</div>

{% schema %}
{
  "name": "lp-8",
  "class": "container",
  "tag": "div",
  "presets": [
    {
      "name": "LP / SECT 8"
    }
	],
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		}
	],
	"blocks": [
		{
			"type": "card",
			"name": "Card",
			"limit": 24,
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				},
				{
					"type": "url",
					"id": "url",
					"label": "URL"
				},
				{
					"type": "checkbox",
					"id": "target_blank",
					"label": "In new window",
					"default": false
				}
			]
		}
	]
}
{% endschema %}
