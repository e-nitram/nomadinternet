{% comment %}
File name:
	lp - landing page
	number - section number
{% endcomment %}

<div class="lp-7">
	<div class="lp-7__content">
		{% if section.settings.title %}
			<h2 class="lp-7__title">{{ section.settings.title }}</h2>
		{% endif %}
		{% if section.blocks %}
			<div class="row v-gutters justify-center">
				{% for block in section.blocks %}
					<div class="col-md-6 col-12">
						<div class="lp-7__card">
							{% if block.settings.image %}
								<div class="card__image">
									{% assign img = block.settings.image %}
									{{ img | image_url: width: img.width | image_tag }}
								</div>
							{% endif %}
						</div>
					</div>
				{% endfor %}
			</div>
		{% endif %}
	</div>
</div>

{% schema %}
{
  "name": "lp-7",
  "class": "container",
  "tag": "div",
  "presets": [
    {
      "name": "LP / SECT 7"
    }
	],
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		}
	],
	"blocks": [
		{
			"type": "card",
			"name": "Card",
			"limit": 3,
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				}
			]
		}
	]
}
{% endschema %}
