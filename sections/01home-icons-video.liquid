<section class="video-and-text-section{% if template == 'page.nomad-landing' %} page--nomad-landing{% endif %}">
    <div class="">
        <div class="section-content" style="background-color: {{ section.settings.bg_color }};">
            <div class="left-content">
                {% if template == 'page.flex-pay' %}
                    <h2>Join America's Most Cost-Effective Wireless Internet Provider with Nomad's Flex Pay</h2>
                {% elsif template == 'page.nomad-landing' %}
                    <h2>Join the Nation's Premier Wireless Internet Provider  & Offer Free Internet to Your Community</h2>
                {% else %}
                    <h2>{{ section.settings.heading }}</h2>
                {% endif %}

                <div class="icon-list">
                    {% assign index_counter = 0 %} <!-- Initialize the counter -->

                    {% for block in section.blocks %}
                    
                    	<div class="icon" data-index="{{section.id}}-{{ index_counter }}">
                    		<img src="{{ block.settings.image | img_url: 'master' }}" width="60" height="61">
                    		<h3>{{ block.settings.heading }}</h3>
                    
                    		<div class="icon-popup customize-notify hidden" data-index="{{section.id}}-{{ index_counter }}">
                    			<h6 class="title">{{ block.settings.content_heading }}</h6>
                    			<span>{{ block.settings.content_description }}</span>
                    		</div>
                    	</div>
                     {% assign index_counter = index_counter | plus: 1 %} <!-- Increment the counter -->
                    {% endfor %}
        
                    
                </div>
            </div>
        </div>
    </div>
</section>


