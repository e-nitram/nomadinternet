{{ '03raptor-gaming-icons.css' | asset_url | stylesheet_tag }}
<div class="raptor-gaming-icons">
  {% if section.settings.heading != blank %}
    <h3 
      class="heading"
      style="
        color: {{ section.settings.heading_color }};
        background-color: {{ section.settings.heading_bg_color }};
      "
    >
      {{ section.settings.heading }}
    </h3>
  {% endif %}
  <div class="black-bg-1"></div>
  <div class="raptor-gaming-icons__list">
    <div class="wrapper">
      {% for block in section.blocks %}
        {% if block.settings.icon != blank %}
          <div class="item">
            <img src="{{ block.settings.icon | img_url: 'master' }}" alt=""/>
          </div>
        {% endif %}
      {% endfor %}

      {% for block in section.blocks %}
        {% if block.settings.icon != blank %}
          <div class="item">
            <img src="{{ block.settings.icon | img_url: 'master' }}" alt=""/>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="black-bg-2"></div>
</div>

{% schema %}
{
  "name": "Rator Gaming Icons",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tested with"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "heading_bg_color",
      "label": "Heading bg color",
      "default": "#FF7517"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Raptor Gaming Icons"
    }
  ]
}
{% endschema %}