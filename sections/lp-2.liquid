{% comment %}
  File name:
  	lp - landing page
  	number - section number
{% endcomment %}

<div class="lp-2">
  <div class="lp-2__content">
    {% if section.settings.title %}
      <h2 class="lp-2__title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="row v-gutters">
      {% for card in section.blocks %}
        <div class="col-lg-6 col-12">
          <div class="lp-2__card" style="background-color: {{ card.settings.background_color }}">
            {% if card.settings.title %}
              <h3 class="card__title" style="color: {{ card.settings.title_color }}">{{ card.settings.title }}</h3>
            {% endif %}
            {% if card.settings.image %}
              <div class="card__image">
                {{ card.settings.image | image_url: width: 992 | image_tag }}
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "lp-2",
  "class": "container",
  "tag": "div",
  "presets": [
    {
      "name": "LP / SECT 2"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "color",
          "id": "background_color",
          "label": "Background color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "title_color",
          "label": "Text color",
          "default": "#333333"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}
