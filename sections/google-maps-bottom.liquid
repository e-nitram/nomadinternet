<div class="google-maps-bottom active" js-google-maps-footer>
  <div class="top-line" js-footer-btn></div>

  <div id="default" class="item">
    {% if section.settings.icon != blank %}
      <img src="{{ section.settings.icon | img_url: 'master' }}"/>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h3 class="heading">{{ section.settings.heading }}</h3>
    {% endif %}

    {% if section.settings.button_link != blank and section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn" target="_blank">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>

  <div id="marker" class="item hidden">

  </div>
</div>

{% schema %}
{
  "name": "Google maps footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}