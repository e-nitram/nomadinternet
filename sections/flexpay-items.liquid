{{ 'flexpay-items.css' | asset_url | stylesheet_tag }}

<div class="flexpay-items">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h3 class="heading" style="--heading-color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h3>
    {% endif %}

    <div class="list" style="--grid-count: {{ section.settings.column_count }}">
      {% for block in section.blocks %}
        {% if block.settings.heading != blank and block.settings.icon != blank %}
          <div class="item">
            <div class="item-icon">
              <img src="{{ block.settings.icon | img_url: 'master' }}"/>
            </div>

            <h3 class="title">{{ block.settings.heading }}</h3>
            <div class="content">{{ block.settings.content }}</div>

            {% if block.settings.hover_content != blank %}
              <div class="hover_content">{{ block.settings.hover_content | replace: '<li>', '<li><svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" viewBox="0 0 26 26" fill="none"><path d="M21.0819 6.36935L9.51265 17.9386L4.25391 12.6798" stroke="#008061" stroke-width="2.1035" stroke-linecap="round" stroke-linejoin="round"></path></svg><span>' | replace: '</li>', '</span></li>' }}</div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Flexpay items",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Nomad Flex Pay"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#013127"
    },
    {
      "type": "range",
      "id": "column_count",
      "min": 1,
      "max": 4,
      "step": 1,
      "label": "Column count",
      "default": 2
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        },
        {
          "type": "richtext",
          "id": "hover_content",
          "label": "Hover content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flexpay items"
    }
  ]
}
{% endschema %}