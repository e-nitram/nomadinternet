  </div>
{% for product in collections['plans-options3'].products %}
           <div class="second_prd_row">  
        <div class="collectionBlock-info collectionBlock-info--center2">    
         {{ product.featured_image | img_url: '600x600' | img_tag: product.featured_image.alt }}  
            
            {{- product.title | link_to: product.url }}<br>
               {{ product.description }} 
          <div class="price_o_f">
             <p>Total value: </p> 
            <div class="offers">
        <h4 class="price striped" id="comparePrice-template--14452132479034__main"><span class="money">{{ product.compare_at_price_min | money_without_trailing_zeros }}</span></h4>
        <h4 class="price" id="productPrice-template--14452132479034__main"><span class="money">{{ product.price | money }}</span>/</h4>
      </div> <h6>monthly</h6> 
          </div>
         <div class="add_cart_plnof"> 
  <form  method="post" action="/cart/add">
