{% comment %}
File name:
	lp - landing page
	number - section number
{% endcomment %}

<div style="background-color: {{ section.settings.bg_color }}" id="section-{{ section.id }}">
	<div class="container">
		<div class="lp-9__body">
			{% if section.settings.image %}
				<div class="lp-9__image">
					{% assign img = section.settings.image %}
					<div class="ratio" style="--ratio: calc(520 / 674 * 100%)">
						{{ img | image_url: width: img.width | image_tag }}
					</div>
				</div>
			{% endif %}
			<div class="lp-9__content">
				<h1 class="lp-9__title">{{ section.settings.title }}</h1>
				<div class="lp-9__description">
					<p>{{ section.settings.description }}</p>
				</div>
				<div>
					{% for btn in section.blocks %}
						<a href="{{ btn.settings.url }}" id="button-{{ btn.id }}" class="btn lg red">{{ btn.settings.text }}</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</div>

{% schema %}
{
  "name": "lp-9",
  "class": "lp-9",
  "tag": "div",
  "presets": [
    {
      "name": "LP / SECT 9"
    }
	],
	"settings": [
		{
			"type": "image_picker",
			"id": "image",
			"label": "Image"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "text",
			"id": "description",
			"label": "Description"
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color",
			"default": "#ffffff"
		}
	],
	"blocks": [
		{
			"type": "button",
			"name": "Button",
			"limit": 1,
			"settings": [
				{
					"type": "text",
					"label": "Text",
					"id": "text"
				},
				{
					"type": "url",
					"label": "URL",
					"id": "url"
				}
			]
		}
	]
}
{% endschema %}
