<div class="testimonial-section">
  <div class="container-wrapper">
    <div class="new-row">
       <div class="col-5 pr-0">
      <div class="">
        <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
           <h2 class="heading">{{ section.settings.heading }}</h2><br>
        
       </div>
      </div>
      
      <div class="col-5">
        <div class="testimonal-wrapper">        
             <div class="swiper main-testimonial-slider" id="testimonial-slider-{{ section.id }}">
              <div class="testimonial-slider swiper-wrapper">
               {% if section.blocks.size > 0 %}
                {% for block in section.blocks %}
                  <div class="testimonial-item swiper-slide">
                    <div class="testimonial-item-inner">
                       <img style="max-width:50px;" src="https://cdn.shopify.com/s/files/1/0103/2847/3658/files/da21dde662a19a4b8a6e17048660983a.png?v=1668153012">

                     

                      
                      <div class="clnt_bx">                       
                      <div class="star">
                        <img class="banner-image"
                 srcset="{%- if block.settings.image.width >= 375 -%}{{ block.settings.image | img_url: '375x' }} 375w,{%- endif -%}
                         {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | img_url: '550x' }} 550w,{%- endif -%}
                         {%- if block.settings.image.width >= 750 -%}{{ block.settings.image | img_url: '750x' }} 750w,{%- endif -%}
                         {%- if block.settings.image.width >= 1100 -%}{{ block.settings.image | img_url: '1100x' }} 1100w,{%- endif -%}"
                 src="{{ block.settings.image | img_url: '525x' }}"
                 loading="lazy"
                 alt="{{ block.settings.image.alt | escape }}"
                 width="{{ block.settings.image.width }}"
                 height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
                 >
                      </div>
                           <div class="testimonial-name">
                        {{ block.settings.testimonial_name }}
                  <p>First Customer</p>
                      </div>
                      </div>
                      <div class="testimonail-content">
                        {{ block.settings.testimonial_description }}
                      </div>
                     
                    </div>
                  </div>
                {% endfor %}
              {% else %}
                {% for i in (1..2) %}
                  <div class="testimonial-item swiper-slide">
                     <div class="testimonial-item-inner">
                      <div class="star">
                      </div>
                      <div class="testimonail-content">
                        Lorem Ipsum is simply dummy text of the printing and typesetting industry....
                      </div>
                      <div class="testimonial-name">
                        Lorem Ipsum 
                      </div>
                     </div>
                  </div>
                {% endfor %}
              {% endif %}
            </div>
           
            <div class="swiper-pagination"></div>
          </div>
        </div>
      </div>     
    </div>
  </div>
</div>
 
<script>
function relatedproductSlider() {
var swiper = new Swiper('#testimonial-slider-{{ section.id }}', {
  pagination: {
    el: ".main-testimonial-slider .swiper-pagination",
    clickable: true,
  },
  navigation: {
    nextEl: ".swiper-button-next",
    prevEl: ".swiper-button-prev",
  },
  slidesPerView: 2,
  spaceBetween: 30,
  breakpoints: {
    320: {
      slidesPerView: 1
    },
    600: {
      slidesPerView: 1
    },
    768: {
      slidesPerView: 1
    },
    991: {
      slidesPerView: 2
    }
  }
});
}

( function () {
  relatedproductSlider();
})();

document.addEventListener('shopify:section:load', function (event) {
  if (event.detail.sectionId === '{{section.id}}') {
    setTimeout(function () {
      relatedproductSlider();
    }, 500);
  }
});
</script>

{% schema %}
  {
    "name": "testimonial new",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Testimonial Section"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
     {
        "type": "slide",
        "name": "Slide",
        "settings": [
        {
            "type": "text",
            "id": "testimonial_description",
            "label": "Description",
            "default": "Lorem Ipsum is simply dummy text of the printing and typesetting industry...."
        },
          {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
        {
            "type": "text",
            "id": "testimonial_name",
            "label": "Testimonial Name",
            "default": "Ryan T"
        }
      ]
    }
   ],
   "presets": [
    {
        "name": "testimonial new"
    }
  ]
}
{% endschema %}

