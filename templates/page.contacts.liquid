<div class="contacts">
	<div class="container">
		<h1 class="page__title">CONTACT US</h1>

		<div class="contacts__top">
			<div class="row v-gutters space-lg-between justify-center">
				<div class="col-lg-5 col-sm-10 col-12">
					<div class="contacts__left">
						<h3 class="contacts__title">Our contacts</h3>

						<ul class="contacts__list">
							<li>
								<address>Nomad Internet 1308 Common St Suite 205 New Braunfels, Texas 78130</address>
							</li>
							<li>
								<span>Call us at:</span>
								<span>
									<a href="tel:+13852572809">+1 385 257 2809</a>
								</span>
							</li>
							<li>
								<span>Email us:</span>
								<span>
									<a href="mailto:partner@hxo.com">partner@hxo.com</a>
								</span>
							</li>
							<li>
								<span>Working hours:</span>
								<span>24/7</span>
							</li>
						</ul>

<!--                       HIDDEN TEMP -->
						<div class="contacts__buttons hidden">
							<div class="row v-gutters">
								<div class="col-12">
									<a href="#" class="btn lg outline wide">Contact on Telegram</a>
								</div>

								<div class="col-12">
									<a href="#" class="btn lg outline wide">Contact on WhatsApp</a>
								</div>
							</div>
						</div>

						<div class="contacts__map">
							<div class="ratio" style="--ratio: calc(400 / 500 * 100%)">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3464.981068525131!2d-98.10486332386142!3d29.720307633854297!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x865cbd323d2ee3b3%3A0x298457d383bd4b72!2s1308%20Common%20St%20%23205%2C%20New%20Braunfels%2C%20TX%2078130%2C%20USA!5e0!3m2!1sen!2sin!4v1687496802568!5m2!1sen!2sin" width="600" height="700" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
							</div>
						</div>
					</div>
				</div>

				<div class="col-lg-5 col-sm-10 col-12">
					<div class="contacts__right">
						<h3 class="contacts__title">Feedback form</h3>
						<div class="contacts__description">
							<p>We sincerely thank you for your questions, feedback and suggestions. Your message will be sent to the Customer service department, and we will respond to you as soon as possible.</p>
						</div>

						<div class="contacts__form">
							{% form 'contact' %}
							{{ form.errors | default_errors }}
							<input type="hidden" name="contact[page_title]" value="{{ page.title }}">
							<input type="hidden" name="contact[page_url]" value="https://{{ request.host }}{{ request.path }}">
							<input type="hidden" name="contact[page_type]" value="{{ page.template_suffix }}">

								<label class="input-wrapper">
									<span class="sr-only">Name</span>
									<input type="text" name="contact[name]" placeholder="Name" required>
								</label>

								<label class="input-wrapper">
									<span class="sr-only">Phone</span>
									<input type="tel" name="contact[phone]" placeholder="Phone" required>
								</label>

								<label class="input-wrapper">
									<span class="sr-only">E-mail</span>
									<input type="mail" name="contact[email]" placeholder="E-mail" required>
								</label>
								<label class="input-wrapper">
									<span class="sr-only">Message</span>
									<textarea placeholder="Message" name="contact[body]" required></textarea>
								</label>
								<label class="input-wrapper">
									<input type="submit" value="Send message" class="btn outline lg wide">
								</label>
							{% endform %}
						</div>
					</div>
				</div>
			</div>
		</div>

<!--       HIDDEN TEMP -->
		<div class="contacts__branches hidden">
			<h3 class="contacts__title">Our branches in USA</h3>

			<div class="accordion">

				<div class="accordion__pane">
					<div class="accordion__heading">Branch in Oidaho</div>
					<div class="accordion__content">
						<div class="row v-gutters">
							<div class="col-lg-5 col-12">
								<ul class="contacts__list">
									<li>
										<address>1500 East George Bush Drive, College Station, Texas 77840</address>
									</li>
									<li>
										<span>Call us at:</span>
										<span>
											<a href="tel:(979)010-0220">(979) 010-0220</a>
										</span>
									</li>
									<li>
										<span>Email us at stay:</span>
										<span>
											<a href="mailto:internet@nomad.com">internet@nomad.com</a>
										</span>
									</li>
									<li>
										<span>Working hours:</span>
										<span>24/7</span>
									</li>
								</ul>
							</div>
							<div class="col-lg-5 offset-lg-1 col-12">
								<p>Leave your phone and we will call you back</p>
								{% form 'contact' %}
									{{ form.errors | default_errors }}

									<label class="input-wrapper">
										<span class="sr-only">Phone</span>
										<input type="tel" name="contact[phone]" placeholder="Phone" required>
									</label>
									<textarea class="sr-only" name="contact[body]">Call me back</textarea>
									<label class="input-wrapper">
										<input type="submit" value="Call me back" class="btn outline">
									</label>
								{% endform %}
							</div>
						</div>
					</div>
				</div>

				<div class="accordion__pane">
					<div class="accordion__heading">Accordion heading 2</div>
					<div class="accordion__content">
						<h3>Content 2</h3>
						<p>Lorem ipsum dolor sit amet ...</p>
					</div>
				</div>

				<div class="accordion__pane">
					<div class="accordion__heading">Accordion heading 3</div>
					<div class="accordion__content">
						<h3>Content 3</h3>
						<p>Lorem ipsum dolor sit amet ...</p>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>
